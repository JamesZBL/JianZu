<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<com.lqr.optionitemview.OptionItemView
		style="@style/OptionItem"
		android:layout_marginTop="@dimen/option_item_margin_top"
		android:background="@drawable/selector_common_item"
		app:left_image_margin_left="@dimen/option_item_margin_left"
		app:left_image_margin_right="@dimen/option_item_margin_right"
		app:left_src="@mipmap/rainbow_ic"
		app:left_text="@string/friend_cicle"
		app:left_text_color="@color/black0"
		app:left_text_size="16sp"/>


	<com.lqr.optionitemview.OptionItemView
		android:id="@+id/oivScan"
		style="@style/OptionItem"
		android:layout_marginTop="@dimen/option_item_margin_top"
		android:background="@drawable/selector_common_item"
		app:left_image_margin_left="@dimen/option_item_margin_left"
		app:left_image_margin_right="@dimen/option_item_margin_right"
		app:left_src="@drawable/ic_qrcode_blue"
		app:left_text="@string/scan"
		app:left_text_color="@color/black0"
		app:left_text_size="16sp"/>


	<com.lqr.optionitemview.OptionItemView
		android:id="@+id/oivShop"
		style="@style/OptionItem"
		android:layout_marginTop="@dimen/option_item_margin_top"
		android:background="@drawable/selector_common_item"
		app:left_image_margin_left="@dimen/option_item_margin_left"
		app:left_image_margin_right="@dimen/option_item_margin_right"
		app:left_src="@drawable/ic_shop_house"
		app:left_text="@string/shopping"
		app:left_text_color="@color/black0"
		app:left_text_size="16sp"/>

	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

		<View
			style="@style/Line"
			android:layout_marginLeft="@dimen/option_item_margin_left"
			android:layout_marginRight="@dimen/option_item_margin_right"
			/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<com.lqr.optionitemview.OptionItemView
		android:id="@+id/oivGame"
		style="@style/OptionItem"
		android:background="@drawable/selector_common_item"
		app:left_image_margin_left="@dimen/option_item_margin_left"
		app:left_image_margin_right="@dimen/option_item_margin_right"
		app:left_src="@mipmap/ic_game"
		app:left_text="@string/game"
		app:left_text_color="@color/black0"
		app:left_text_size="16sp"
		app:right_src="@drawable/ic_tab_emoji"
		app:right_text="@string/game_right"
		app:right_text_color="@color/gray3"
		app:right_text_size="13sp"/>

	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

		<View
			style="@style/Line"
			android:layout_marginLeft="@dimen/option_item_margin_left"
			android:layout_marginRight="@dimen/option_item_margin_right"
			/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<com.lqr.optionitemview.OptionItemView
		android:id="@+id/oivMyBiaoBiao"
		style="@style/OptionItem"
		android:background="@drawable/selector_common_item"
		app:left_image_margin_left="@dimen/option_item_margin_left"
		app:left_image_margin_right="@dimen/option_item_margin_right"
		app:left_src="@drawable/ic_biaobiao_launcher"
		app:left_text="@string/my_biaobiao"
		app:left_text_color="@color/black0"
		app:left_text_size="16sp"
		app:right_text="@string/so_like_biao"
		app:right_text_color="@color/gray3"
		app:right_text_size="13sp"/>

	<com.zhy.autolayout.AutoRelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white">

		<View
			style="@style/Line"
			android:layout_marginLeft="@dimen/option_item_margin_left"
			android:layout_marginRight="@dimen/option_item_margin_right"
			/>
	</com.zhy.autolayout.AutoRelativeLayout>

	<com.lqr.optionitemview.OptionItemView
		android:id="@+id/oivBook"
		style="@style/OptionItem"
		android:background="@drawable/selector_common_item"
		app:left_image_margin_left="@dimen/option_item_margin_left"
		app:left_image_margin_right="@dimen/option_item_margin_right"
		app:left_src="@drawable/ic_book_red"
		app:left_text="@string/book_library_system"
		app:left_text_color="@color/black0"
		app:left_text_size="16sp"
		/>
</com.zhy.autolayout.AutoLinearLayout>

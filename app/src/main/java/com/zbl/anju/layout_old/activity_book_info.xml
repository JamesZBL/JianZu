<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.zbl.anju.ui.activity.BookInfoActivity">

	<include
		layout="@layout/include_toolbar"/>

	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="30px"
		android:paddingRight="30px">

		<View
			style="@style/Line"
			/>

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="100px"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingLeft="30px"
			android:paddingRight="30px">

			<TextView
				android:layout_width="120px"
				android:layout_height="wrap_content"
				android:text="@string/book_bookname"
				android:textColor="@color/black0"
				android:textSize="16dp"/>

			<com.zbl.anju.widget.ClearEditText
				android:id="@+id/edtBookName"
				style="@style/editTextNoBack"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:drawableRight="@mipmap/ic_delete"
				android:hint="@string/book_please_intput_bookname"
				android:singleLine="true"
				android:textColorHint="@color/gray3"
				android:textSize="16dp"/>

		</com.zhy.autolayout.AutoLinearLayout>

		<View
			style="@style/Line"
			/>

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="100px"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:paddingLeft="30px"
			android:paddingRight="30px">

			<TextView
				android:layout_width="120px"
				android:layout_height="wrap_content"
				android:text="@string/book_number_2"
				android:textColor="@color/black0"
				android:textSize="16dp"/>

			<com.zbl.anju.widget.ClearEditText
				android:id="@+id/edtBookNumber"
				style="@style/editTextNoBack"
				android:layout_width="match_parent"
				android:inputType="number"
				android:layout_height="wrap_content"
				android:drawableRight="@mipmap/ic_delete"
				android:hint="@string/book_please_intput_booknumber"
				android:singleLine="true"
				android:textSize="16dp"/>

		</com.zhy.autolayout.AutoLinearLayout>

		<View
			style="@style/Line"
			/>

		<Button
			android:id="@+id/btnSubmitBook"
			style="@style/btn"
			android:layout_width="match_parent"
			android:layout_height="96px"
			android:layout_marginBottom="30px"
			android:layout_marginTop="30px"
			android:enabled="true"
			android:text="@string/book_add_sure"
			android:textSize="18dp"/>

	</com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>

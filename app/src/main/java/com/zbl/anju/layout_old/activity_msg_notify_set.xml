<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray5"
	android:orientation="vertical">

	<include layout="@layout/include_toolbar"/>

	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/set_msg_notify_part1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/option_item_margin_top"
		android:background="@color/white"
		android:orientation="vertical"
		android:visibility="visible">

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="96px"
			android:background="@drawable/selector_option_item"
			android:gravity="center_vertical"
			android:visibility="visible">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/activity_horizontal_margin"
				android:layout_weight="1"
				android:text="@string/new_message_remind"
				android:textColor="@color/black0"
				android:textSize="16sp"/>

			<com.kyleduo.switchbutton.SwitchButton
				android:id="@+id/set_msg_notify_if_notify"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/option_item_margin_right"
				app:kswBackDrawable="@drawable/ios_back_drawable"
				app:kswBackMeasureRatio="1.8"
				app:kswThumbDrawable="@drawable/ios_thumb_selector"
				app:kswThumbMarginBottom="-4dp"
				app:kswThumbMarginLeft="-2dp"
				app:kswThumbMarginRight="-2dp"
				app:kswThumbMarginTop="-0dp"
				app:kswThumbWidth="10dp"/>
		</com.zhy.autolayout.AutoLinearLayout>


		<View
			style="@style/Line"
			android:layout_marginLeft="30px"
			android:layout_marginRight="30px"
			/>

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="96px"
			android:background="@drawable/selector_option_item"
			android:gravity="center_vertical"
			android:visibility="visible">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/activity_horizontal_margin"
				android:layout_weight="1"
				android:text="@string/notify_sound_mode"
				android:textColor="@color/black0"
				android:textSize="16sp"/>

			<com.kyleduo.switchbutton.SwitchButton
				android:id="@+id/set_msg_notify_if_sound"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/option_item_margin_right"
				app:kswBackDrawable="@drawable/ios_back_drawable"
				app:kswBackMeasureRatio="1.8"
				app:kswThumbDrawable="@drawable/ios_thumb_selector"
				app:kswThumbMarginBottom="-4dp"
				app:kswThumbMarginLeft="-2dp"
				app:kswThumbMarginRight="-2dp"
				app:kswThumbMarginTop="-0dp"
				app:kswThumbWidth="10dp"/>
		</com.zhy.autolayout.AutoLinearLayout>

		<View
			style="@style/Line"
			android:layout_marginLeft="30px"
			android:layout_marginRight="30px"
			/>

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="96px"
			android:background="@drawable/selector_option_item"
			android:gravity="center_vertical"
			android:visibility="visible">

			<TextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/activity_horizontal_margin"
				android:layout_weight="1"
				android:text="@string/notify_vibrate_mode"
				android:textColor="@color/black0"
				android:textSize="16sp"/>

			<com.kyleduo.switchbutton.SwitchButton
				android:id="@+id/set_msg_notify_if_vibrate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/option_item_margin_right"
				app:kswBackDrawable="@drawable/ios_back_drawable"
				app:kswBackMeasureRatio="1.8"
				app:kswThumbDrawable="@drawable/ios_thumb_selector"
				app:kswThumbMarginBottom="-4dp"
				app:kswThumbMarginLeft="-2dp"
				app:kswThumbMarginRight="-2dp"
				app:kswThumbMarginTop="-0dp"
				app:kswThumbWidth="10dp"/>
		</com.zhy.autolayout.AutoLinearLayout>

	</com.zhy.autolayout.AutoLinearLayout>

	<com.zhy.autolayout.AutoLinearLayout
		android:id="@+id/set_msg_notify_part2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/option_item_margin_top"
		android:background="@color/white"
		android:orientation="vertical"
		android:visibility="visible">

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="192px"
			android:background="@drawable/selector_option_item"
			android:gravity="center_vertical"
			android:orientation="vertical"
			android:visibility="visible">

			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="76px"
				android:background="@drawable/selector_option_item"
				android:gravity="center_vertical"
				android:visibility="visible">

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/activity_horizontal_margin"
					android:layout_weight="1"
					android:text="@string/new_message_remind"
					android:textColor="@color/black0"
					android:textSize="16sp"/>

				<com.kyleduo.switchbutton.SwitchButton
					android:id="@+id/set_msg_notify_if_notify_with_detail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="@dimen/option_item_margin_right"
					app:kswBackDrawable="@drawable/ios_back_drawable"
					app:kswBackMeasureRatio="1.8"
					app:kswThumbDrawable="@drawable/ios_thumb_selector"
					app:kswThumbMarginBottom="-4dp"
					app:kswThumbMarginLeft="-2dp"
					app:kswThumbMarginRight="-2dp"
					app:kswThumbMarginTop="-0dp"
					app:kswThumbWidth="10dp"/>

			</com.zhy.autolayout.AutoLinearLayout>

			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="76px"
				android:background="@drawable/selector_option_item"
				android:gravity="center_vertical"
				android:visibility="visible">

				<TextView
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/activity_horizontal_margin"
					android:layout_marginRight="@dimen/option_item_margin_right"
					android:layout_marginBottom="4dp"
					android:layout_weight="1"
					android:text="@string/notify_detail_explain"
					android:textColor="@color/gray1"
					android:textSize="14sp"/>
			</com.zhy.autolayout.AutoLinearLayout>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

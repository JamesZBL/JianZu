<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <!-- pressed the button status -->
        <shape>
            <!-- 开始颜色="" 结束颜色="" 颜色渐变="" -->
            <gradient android:angle="0" android:endColor="@color/gray" android:startColor="@color/gray"/>
            <!-- //边缘颜色   按钮四个圆角="" -->
            <!-- //半径    内边距="" 按钮文字和边缘距离="" -->
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>


    <item android:state_pressed="false">
        <!-- no focus the button status(the normal status button) -->
        <shape>
            <gradient android:angle="0" android:endColor="@color/white" android:startColor="@color/white"/>
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>

</selector>

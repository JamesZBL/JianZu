<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<!-- appbar(required) -->
	<include
		layout="@layout/include_toolbar_white"
		/>

	<!-- 表单项目 -->
	<View style="@style/LineGrayDividerNoMargin"/>
	<!-- 姓名 -->
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="90px"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="30px"
		android:paddingRight="30px"
		>

		<TextView
			android:layout_width="120px"
			android:layout_height="wrap_content"
			android:text="@string/regist_name"
			android:textColor="@color/black0"
			android:textSize="28px"/>

		<EditText
			android:id="@+id/et_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@null"
			android:hint="@string/regist_your_real_name"
			android:text=""
			android:textColorHint="@color/gray3"
			android:textSize="28px"/>

	</com.zhy.autolayout.AutoLinearLayout>

	<!-- 手机号 -->
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="90px"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="30px"
		android:paddingRight="30px"
		>

		<TextView
			android:layout_width="120px"
			android:layout_height="wrap_content"
			android:text="@string/regist_phone_num"
			android:textColor="@color/black0"
			android:textSize="28px"/>

		<EditText
			android:id="@+id/et_phone_num"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@null"
			android:hint="请输入真实有用的手机号"
			android:inputType="phone"
			android:text=""
			android:textColorHint="@color/gray3"
			android:textSize="28px"/>

	</com.zhy.autolayout.AutoLinearLayout>

	<!-- 身份证号 -->
	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="90px"
		android:background="@color/white"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:paddingLeft="30px"
		android:paddingRight="30px"
		>

		<TextView
			android:layout_width="120px"
			android:layout_height="wrap_content"
			android:text="@string/regist_id_num"
			android:textColor="@color/black0"
			android:textSize="28px"/>

		<EditText
			android:id="@+id/et_id_num"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@null"
			android:hint="@string/regist_real_id_num"
			android:inputType="number"
			android:maxLength="18"
			android:textColorHint="@color/gray3"
			android:textSize="28px"/>

	</com.zhy.autolayout.AutoLinearLayout>

	<Button
		android:id="@+id/btn_submit_reg"
		style="@style/btn2"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_margin="16dp"
		android:text="提交信息"
		/>
</com.zhy.autolayout.AutoLinearLayout>

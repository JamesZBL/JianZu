<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<!-- appbar(required) -->
	<include
		layout="@layout/include_toolbar_white"
		/>

	<com.zhy.autolayout.AutoLinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.zhy.autolayout.AutoLinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="5dp"
			>
			<!-- 第一行 -->
			<com.zhy.autolayout.AutoLinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				<!-- 1 -->
				<com.zbl.anju.widget.AutoCardView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="3dp"
					android:layout_weight="1"
					android:background="@drawable/selector_option_item"
					>

					<com.zhy.autolayout.AutoRelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerHorizontal="true"
							android:orientation="vertical"
							android:padding="10dp">

							<ImageView
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_h_jiadian"
								/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:layout_margin="5dp"
								android:text="@string/ershou_jiadian"
								/>
						</com.zhy.autolayout.AutoLinearLayout>
					</com.zhy.autolayout.AutoRelativeLayout>
				</com.zbl.anju.widget.AutoCardView>
				<!-- 2 -->
				<com.zbl.anju.widget.AutoCardView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="3dp"
					android:layout_weight="1"
					android:background="@drawable/selector_option_item"
					>

					<com.zhy.autolayout.AutoRelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerHorizontal="true"
							android:orientation="vertical"
							android:padding="10dp">

							<ImageView
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_h_jiaju"
								/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:layout_margin="5dp"
								android:text="@string/ershou_furniture"
								/>
						</com.zhy.autolayout.AutoLinearLayout>
					</com.zhy.autolayout.AutoRelativeLayout>
				</com.zbl.anju.widget.AutoCardView>
				<!-- 3 -->
				<com.zbl.anju.widget.AutoCardView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="3dp"
					android:layout_weight="1"
					android:background="@drawable/selector_option_item"
					>

					<com.zhy.autolayout.AutoRelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerHorizontal="true"
							android:orientation="vertical"
							android:padding="10dp">

							<ImageView
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_h_xiaojiadian"
								/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:layout_margin="5dp"
								android:text="@string/ershou_xiaojiadian"
								/>
						</com.zhy.autolayout.AutoLinearLayout>
					</com.zhy.autolayout.AutoRelativeLayout>
				</com.zbl.anju.widget.AutoCardView>
				<!-- 4 -->
				<com.zbl.anju.widget.AutoCardView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_margin="3dp"
					android:layout_weight="1"
					android:background="@drawable/selector_option_item"
					>

					<com.zhy.autolayout.AutoRelativeLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

						<com.zhy.autolayout.AutoLinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_centerHorizontal="true"
							android:orientation="vertical"
							android:padding="10dp">

							<ImageView
								android:layout_width="50dp"
								android:layout_height="50dp"
								android:src="@drawable/ic_h_chuang"
								/>

							<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_gravity="center"
								android:layout_marginTop="5dp"
								android:text="@string/ershou_bed_thing"
								/>
						</com.zhy.autolayout.AutoLinearLayout>
					</com.zhy.autolayout.AutoRelativeLayout>
				</com.zbl.anju.widget.AutoCardView>

			</com.zhy.autolayout.AutoLinearLayout>
		</com.zhy.autolayout.AutoLinearLayout>
	</com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
